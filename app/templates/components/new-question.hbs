{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">What is your name?</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="inquiry">Please type in your question here:</label>
      {{input value=inquiry id="inquiry"}}
    </div>

    <div class="form-group">
      <label for="thoughts">What are your thoughts on this question?</label>
      {{input value=thoughts id="thoughts"}}
    </div>

    <button class="btn btn-success"{{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'questionFormShow'}}>Add Question</button>
{{/if}}
